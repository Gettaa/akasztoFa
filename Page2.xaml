            <Image x:Name="r8" Margin="232,124,0,0" Source="/r8.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="70" Width="29" Visibility="Hidden"/>
            <Image x:Name="r10" Source="/r10.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="90" Width="20" Margin="215,186,0,0" Visibility="Hidden"/>
            <Image x:Name="r11" Source="/r11.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="104" Width="115" Margin="67,48,0,0" Visibility="Hidden"/>
            <Image x:Name="r12" Margin="205,80,0,0" Source="/r12.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="38" Width="35" Visibility="Hidden"/>
            <Image x:Name="rh" Margin="205,83,0,0" Source="/rh.png" RenderTransformOrigin="0.509,0.5" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="34" Visibility="Hidden"/>
            <Label x:Name="hibacount" Content="0/x&#xD;&#xA;&#xA;" HorizontalAlignment="Left" Margin="279,10,0,0" VerticalAlignment="Top" FontSize="15"/>
            <Button x:Name="nextpage" Grid.Column="1" Content="Következő oldal" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Height="26" Width="96" Click="Button_Click_1" Visibility="Hidden"/>
        </Grid>
    </Grid>
</Page>
