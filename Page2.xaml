<Page x:Class="akasztoFa.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:akasztoFa"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="121*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label x:Name="betutipplabel" Content="Betű beírása:&#xD;&#xA;" HorizontalContentAlignment="Center" MinWidth="100" FontSize="16" VerticalContentAlignment="Center"/>
            <Label x:Name="fulltipplabel" Grid.Column="1" Content="Tipp beírása:&#xD;&#xA;" RenderTransformOrigin="0.5,0.5" MinWidth="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.086"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox x:Name="betutipp" Grid.Column="0" Margin="10,10,10,10" TextWrapping="Wrap" FontSize="16" TextChanged="betutipp_TextChanged"/>
            <TextBox x:Name="fulltipp" Grid.Column="1" Margin="10,10,10,10" TextWrapping="Wrap" FontSize="16"/>
            <Button x:Name="trybutton" Grid.Column="2" Content="Próba" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" Width="60" Click="Button_Click"/>
        </Grid>
        <Grid Grid.Row="2" Margin="0,0,0,-1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label x:Name="betu1" Grid.Column="1" Content="_" HorizontalAlignment="Left" Margin="13,145,0,0" VerticalAlignment="Top" FontSize="25" Width="30" Height="49" HorizontalContentAlignment="Center"/>
            <Label x:Name="betu2" Grid.Column="1" Content="_" HorizontalAlignment="Left" Margin="43,145,0,0" VerticalAlignment="Top" FontSize="25" Width="30" Height="49" HorizontalContentAlignment="Center"/>
            <Label x:Name="betu3" Grid.Column="1" Content="_" HorizontalAlignment="Left" Margin="78,145,0,0" VerticalAlignment="Top" FontSize="25" Width="30" Height="49" HorizontalContentAlignment="Center"/>
            <Label x:Name="betu4" Grid.Column="1" Content="_" HorizontalAlignment="Left" Margin="112,145,0,0" VerticalAlignment="Top" FontSize="25" Width="30" Height="49" HorizontalContentAlignment="Center"/>
            <Label x:Name="betu5" Grid.Column="1" Content="_" HorizontalAlignment="Left" Margin="148,145,0,0" VerticalAlignment="Top" FontSize="25" Width="30" Height="49" HorizontalContentAlignment="Center"/>
            <Label x:Name="betu6" Grid.Column="1" Content="_" HorizontalAlignment="Left" Margin="182,145,0,0" VerticalAlignment="Top" FontSize="25" Width="30" Height="49" HorizontalContentAlignment="Center"/>
            <Label x:Name="betu7" Grid.Column="1" Content="_" HorizontalAlignment="Left" Margin="218,145,0,0" VerticalAlignment="Top" FontSize="25" Width="30" Height="49" HorizontalContentAlignment="Center"/>
            <Label x:Name="betu8" Grid.Column="1" Content="_" HorizontalAlignment="Left" Margin="253,145,0,0" VerticalAlignment="Top" FontSize="25" Width="30" Height="50" HorizontalContentAlignment="Center"/>
            <Label x:Name="betu9" Grid.Column="1" Content="_" HorizontalAlignment="Left" Margin="288,145,0,0" VerticalAlignment="Top" FontSize="25" Width="30" Height="49" HorizontalContentAlignment="Center"/>
            <Label x:Name="betu10" Grid.Column="1" Content="_" HorizontalAlignment="Left" Margin="323,145,0,0" VerticalAlignment="Top" FontSize="25" Width="30" Height="49" HorizontalContentAlignment="Center"/>
            <Label x:Name="betu11" Grid.Column="1" Content="_" HorizontalAlignment="Left" Margin="358,145,0,0" VerticalAlignment="Top" FontSize="25" Width="30" Height="49" HorizontalContentAlignment="Center"/>
            <Label x:Name="betu12" Grid.Column="1" Content="_" HorizontalAlignment="Left" Margin="393,145,0,0" VerticalAlignment="Top" FontSize="25" Width="30" Height="49" HorizontalContentAlignment="Center"/>
            <Label x:Name="betu13" Grid.Column="1" Content="_" HorizontalAlignment="Left" Margin="428,145,0,0" VerticalAlignment="Top" FontSize="25" Width="30" Height="49" HorizontalContentAlignment="Center"/>
            <Rectangle Stroke="Black" VerticalAlignment="Center" Height="330" HorizontalAlignment="Center" Width="300"/>
            <Image x:Name="r1" Source="/r1.png" VerticalAlignment="Top" HorizontalAlignment="Left" Height="38" Width="112" Margin="32,320,0,0" Visibility="Hidden"/>
            <Image x:Name="r2" StretchDirection="UpOnly" Source="/r2.png" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top" Height="323" Width="48" Margin="41,17,0,0" Visibility="Hidden"/>
