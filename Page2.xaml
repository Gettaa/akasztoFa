            <Image x:Name="r6" Margin="227,106,0,0" Source="/r6.png" HorizontalAlignment="Left" VerticalAlignment="Top" Height="88" RenderTransformOrigin="0.5,0.5" Width="14" Visibility="Hidden"/>
