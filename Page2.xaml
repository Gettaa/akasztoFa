<Page x:Class="akasztoFa.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:akasztoFa"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="121*"/>
        </Grid.RowDefinitions>
        <Label Content="Betű beírása:&#xD;&#xA;" Margin="160,7,160,7" VerticalContentAlignment="Center" HorizontalContentAlignment="Stretch"/>
        <Label Grid.Column="1" Content="Tipp beírása:&#xD;&#xA;" Margin="158,3,158,3"/>
        <TextBox x:Name="betutipp" Margin="10,10,10,10" Grid.Row="1" TextWrapping="Wrap" Text="TextBox"/>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox x:Name="fulltipp" Grid.Column="1" Margin="10,10,220,10" Grid.Row="1" TextWrapping="Wrap" Text="TextBox"/>
        </Grid>
    </Grid>
</Page>
